// focus event 

document.getElementById("myInput").addEventListener('focus', function(){
    console.log("Text box is in focus")
})

// blur event

document.getElementById("myInput").addEventListener('blur', function(){
    console.log("Text box is no longer in focus")
})

// change event 

document.
getElementById("mySelect").addEventListener("change", function() {
    alert("Selection changed")
})

 
